<Page x:Class="FastType.View.Pages.TypingTutorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastType.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="582" d:DesignWidth="1240"
      Title="Тренажор для печати">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
           
        </Grid.RowDefinitions>

        <Grid Name="KeyboardGrid" Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="50"/>   
                <RowDefinition Height="5"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="ё"/>
                <Button Content="1"/>
                <Button Content="2"/>
                <Button Content="3"/>
                <Button Content="4"/>
                <Button Content="5"/>
                <Button Content="6"/>
                <Button Content="7"/>
                <Button Content="8"/>
                <Button Content="9"/>
                <Button Content="0"/>
                <Button Content="-"/>
                <Button Content="="/>
                <Button Content="BackSpace"/>
            </StackPanel> 
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Content="Tab"/>
                <Button Content="й"/>
                <Button Content="ц"/>
                <Button Content="у"/>
                <Button Content="к"/>
                <Button Content="е"/>
                <Button Content="н"/>
                <Button Content="г"/>
                <Button Content="ш"/>
                <Button Content="щ"/>
                <Button Content="з"/>
                <Button Content="х"/>
                <Button Content="ъ"/>
                <Button Content="\"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Button Content="Caps"/>
                <Button Content="ф"/>
                <Button Content="ы"/>
                <Button Content="в"/>
                <Button Content="а"/>
                <Button Content="п"/>
                <Button Content="р"/>
                <Button Content="о"/>
                <Button Content="л"/>
                <Button Content="д"/>
                <Button Content="ж"/>
                <Button Content="э"/>
                <Button Content="Enter"/>
            </StackPanel>
            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <Button Content="Shift"/>
                <Button Content="я"/>
                <Button Content="ч"/>
                <Button Content="с"/>
                <Button Content="м"/>
                <Button Content="и"/>
                <Button Content="т"/>
                <Button Content="ь"/>
                <Button Content="б"/>
                <Button Content="ю"/>
                <Button Content="."/>
                <Button Content="Shift"/>
            </StackPanel>
            <StackPanel Grid.Row="8" Orientation="Horizontal">
                <Button Content="Space"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>
